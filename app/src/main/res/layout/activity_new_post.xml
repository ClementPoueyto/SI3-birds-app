<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".post.activity.NewPostActivity">

    <EditText
        android:id="@+id/title_textInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:ems="10"
        android:hint="Titre"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/location_textInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:hint="Lieu"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/species_dropdown"
        app:layout_constraintStart_toStartOf="@+id/species_dropdown"
        app:layout_constraintTop_toTopOf="@+id/species_dropdown" />

    <Spinner
        android:id="@+id/species_dropdown"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:spinnerMode="dropdown"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="@+id/title_textInput"
        app:layout_constraintStart_toStartOf="@+id/title_textInput"
        app:layout_constraintTop_toTopOf="@+id/title_textInput"/>

    <EditText
        android:id="@+id/desc_textInput"
        android:layout_width="219dp"
        android:layout_height="137dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="@string/description"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="@+id/location_textInput"
        app:layout_constraintStart_toStartOf="@+id/location_textInput"
        app:layout_constraintTop_toTopOf="@+id/location_textInput" />

    <Button
        android:id="@+id/cancel_post_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Annuler"
        app:layout_constraintBottom_toBottomOf="@+id/save_post_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.306"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/save_post_button"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/save_post_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="96dp"
        android:text="Ajouter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cancel_button"
        app:layout_constraintTop_toBottomOf="@+id/desc_textInput"
        app:layout_constraintVertical_bias="0.472" />

</androidx.constraintlayout.widget.ConstraintLayout>